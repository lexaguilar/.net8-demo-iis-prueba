# top-most EditorConfig file
root = true

# Todas las reglas para archivos C#
[*.cs]

# Estilo general
indent_style = space
indent_size = 4

# Omite chequeo de espacios en blanco (evita error WHITESPACE de dotnet format)
dotnet_diagnostic.IDE0055.severity = none

# Otras reglas opcionales (puedes quitarlas si no las necesitas)
dotnet_style_qualification_for_field = false:suggestion
dotnet_style_qualification_for_property = false:suggestion
dotnet_style_prefer_var_for_built_in_types = true:suggestion
dotnet_style_prefer_braces = true:suggestion
csharp_new_line_before_open_brace = all